@page
@model MTM.Pages.Disciples.DetailsModel

@{
    ViewData["Title"] = "Disciple";
}

<h1>Thông Tin Đồng Tu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciple.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciple.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciple.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciple.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciple.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.InitiateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Disciple.InitiateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Disciple.MeditaionRegisters)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>STT</th>
                    <th>Bắt Đầu</th>
                    <th>Kết Thúc</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Disciple.MeditaionRegisters.Select((value, i) => new { i, value }))
                {
                    <tr>
                        <td>
                            @(item.i + 1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.value.FromTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.value.ToTime)
                        </td>
                        <td>
                            <a asp-page="../Registrations/Edit" asp-route-id="@item.value.ID">Cập Nhật</a> |
                            <a asp-page="../Registrations/Delete" asp-route-id="@item.value.ID">Xóa</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Disciple.ID">Cập Nhật</a> |
    <a asp-page="./Index">Quay Về</a>
</div>

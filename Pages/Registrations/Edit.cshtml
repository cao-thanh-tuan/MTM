@page
@model MTM.Pages.Registrations.EditModel

@{
    ViewData["Title"] = "Registration";
}

<h4>Cập Nhật Thông Tin Đăng Ký Thiền</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Registration.ID" />
            <div class="form-group">
                <b>@Html.DisplayFor(model => model.Registration.Disciple.FullName)</b>
            </div>
            <div class="form-group">
                <label asp-for="Registration.FromTime" class="control-label"></label>
                <input asp-for="Registration.FromTime" class="form-control" />
                <span asp-validation-for="Registration.FromTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.ToTime" class="control-label"></label>
                <input asp-for="Registration.ToTime" class="form-control" />
                <span asp-validation-for="Registration.ToTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-save">&nbsp;</i>&nbsp;Cập Nhật</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Disciples/Details" asp-route-id="@Model.Registration.Disciple.ID" class="fa fa-reply btn-outline-secondary">&nbsp;Quay Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

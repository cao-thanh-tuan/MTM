@page
@model MTM.Pages.Registrations.DeleteModel

@{
    ViewData["Title"] = "Registration";
}

<h4>Xóa Thông Tin Đăng Ký Thiền</h4>

<h5>Bạn muốn xóa thông tin đăng ký thiền này?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registration.Disciple.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registration.Disciple.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registration.FromTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registration.FromTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Registration.ToTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Registration.ToTime)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Registration.ID" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger mb-2"><i class="fa fa-trash">&nbsp;</i>&nbsp;Xóa</button>
        </div>
        <div>
            <a asp-page="../Disciples/Details" asp-route-id="@Model.Registration.Disciple.ID" class="fa fa-reply btn-outline-secondary">&nbsp;Quay Về</a>
        </div>
    </form>
</div>

@page
@model MTM.Pages.Classes.EditModel

@{
    ViewData["Title"] = "Class";
}

<h3>Cập Nhật Thông Tin Lớp</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Class.ID" />
            <div class="form-group">
                <label asp-for="Class.Name" class="control-label"></label>
                <input asp-for="Class.Name" class="form-control" />
                <span asp-validation-for="Class.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class.City" class="control-label"></label>
                <select asp-for="Class.City" class="form-control"
                        asp-items="@Model.CitySL">
                    <option value="">-- Chọn thành phố --</option>
                </select>
                <span asp-validation-for="Class.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary mb-2"><i class="fa fa-save">&nbsp;</i>&nbsp;Cập Nhật</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" class="fa fa-reply btn-outline-secondary">&nbsp;Quay Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
